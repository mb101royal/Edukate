@model IEnumerable<InstructorsDetailsViewModel>
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Index</h1>

    <a class="btn btn-primary mb-3" asp-action="Create" asp-controller="Instructors">Create an Instuctor</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Profession</th>
                <th scope="col">Photo</th>
                <th scope="col" colspan="2">Handle</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td scope="row">@item.Name</td>
                        <td>@item.Profession</td>
                        <td>
                            <img style="width:300px" src="imgs/@item.ImageUrl">
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-controller="Instructors" asp-route-id="@item.Id">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Instructors" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No Data</td>
                </tr>
            }
        </tbody>
    </table>

</div>
<!-- /.container-fluid -->